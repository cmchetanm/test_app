
<div align="center" class="col-md-6 col-md-offset-3">
  <div class="panel panel-info">
    <div class="panel-heading"><strong><%= @user.name %> details</strong>
    </div>
    <div class="panel-body">
      <table class="table table-hover table-bordered" >
        <tr>
          <td class="text-center">
            <strong>First Name</strong>
          </td>
          <td class="text-center">
            <%= @user.first_name %>
          </td>
        </tr>
        <tr>
          <td class="text-center">
            <strong>Last Name</strong>
          </td>
          <td class="text-center">
            <%= @user.last_name %>
          </td>
        </tr>
        <tr>
          <td class="text-center">
            <strong>Email</strong>
          </td>
          <td class="text-center">
            <%= @user.email %>
          </td>
        </tr>
        <tr>
          <td class="text-center">
            <strong>Role</strong>
          </td>
          <td class="text-center">
            <%= @user.role %>
          </td>
        </tr>
        <tr>
          <td colspan="2" class="text-center">
            <%= link_to 'Edit', edit_user_path(@user), class: 'btn  btn-warning',style: 'color:white' %> |
            <%= link_to 'Delete', @user, class: 'btn  btn-danger',style: 'color:white',  method: :delete, data: { confirm: 'Are you sure?' } %> |
            <%= link_to 'Back', users_path, class: 'btn btn-primary',style: 'color:white' %>
          </td>
        </tr>
     </table>
    </div>
  </div>
</div>
